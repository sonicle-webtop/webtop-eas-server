{
	"timezone": "Europe/Rome",
	"log": {
		"level": "ERROR",
		"dir": "/var/log/webtop-eas",
		"specialUsers": ["user@mydomain"]
	},
	"state": {
		"dir": "/var/lib/webtop-eas/state",
		"useLegacyFolderIds": false
	},
	"webtop": {
		"apiBaseUrl": "http://localhost:8080/webtop",
		"apiUrlPath": "/api/com.sonicle.webtop.core/v1"
	},
	"mail": {
		"enabled": true,
		"imapServer": "localhost",
		"imapPort": 143
	},
	"calendar": {
		"enabled": true,
		"apiUrlPath": "/api/com.sonicle.webtop.calendar/v2"
	},
	"contacts": {
		"enabled": true,
		"apiUrlPath": "/api/com.sonicle.webtop.contacts/v2"
	},
	"tasks": {
		"enabled": true,
		"apiUrlPath": "/api/com.sonicle.webtop.tasks/v2"
	}
}
